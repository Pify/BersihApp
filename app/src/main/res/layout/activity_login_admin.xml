<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:background="@drawable/login"
        tools:context=".LoginAdmin">

    <EditText
            android:id="@+id/editLogin_admin"
            android:layout_width="321dp"
            android:layout_height="69dp"
            android:layout_marginTop="328dp"
            android:background="@drawable/edt_email"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:paddingStart="80sp"
            android:paddingBottom="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.933"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <EditText
            android:id="@+id/editPass_admin"
            android:layout_width="321dp"
            android:layout_height="65dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/edt_password"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="80sp"
            android:paddingBottom="15sp"
            app:layout_constraintEnd_toEndOf="@+id/editLogin_admin"
            app:layout_constraintStart_toStartOf="@+id/editLogin_admin"
            app:layout_constraintTop_toBottomOf="@+id/editLogin_admin" />

    <Button
            android:id="@+id/sign_in_admin"
            android:layout_width="215dp"
            android:layout_height="38dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="44dp"
            android:background="@drawable/btn_rounded"
            android:paddingBottom="10dp"
            android:text="Login"
            android:textAllCaps="false"
            android:textColor="#85070707"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/editPass_admin"
            app:layout_constraintHorizontal_bias="0.509"
            app:layout_constraintStart_toStartOf="@+id/editPass_admin"
            app:layout_constraintTop_toBottomOf="@+id/editPass_admin" />

    <TextView
            android:id="@+id/txtDaftar_admin"
            android:layout_width="212dp"
            android:layout_height="19dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:text="Belum punya akun admin ? Daftar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/sign_in_admin"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/sign_in_admin"
            app:layout_constraintTop_toBottomOf="@+id/sign_in_admin"
            app:layout_constraintVertical_bias="0.287" />

    <TextView
            android:layout_width="27dp"
            android:layout_height="165dp"
            android:fontFamily="@font/montserrat"
            android:text="A  D  M  I  N"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.041"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.643" />

</androidx.constraintlayout.widget.ConstraintLayout>

