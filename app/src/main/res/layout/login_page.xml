<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_vertical"
              android:background="@drawable/login">

    <EditText
            android:id="@+id/editLogin"
            android:layout_width="321dp"
            android:layout_height="69dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="330dp"
            android:background="@drawable/edt_email"
            android:ems="10"
            android:fontFamily="@font/montserrat"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:paddingLeft="80sp"
            android:paddingBottom="15sp" />

    <EditText
            android:id="@+id/editPass"
            android:layout_width="321dp"
            android:layout_height="65dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/edt_password"
            android:ems="10"
            android:fontFamily="@font/montserrat"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="80sp"
            android:paddingBottom="15sp" />

    <RelativeLayout
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_width="401dp"
            android:layout_height="165dp" android:layout_marginRight="25dp">

        <Button
                android:id="@+id/sign_in"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="70dp"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="112dp"
                android:layout_marginBottom="90dp"
                android:background="@drawable/btn_rounded"
                android:fontFamily="@font/montserrat"
                android:paddingBottom="10dp"
                android:text="Login"
                android:textAllCaps="false"
                android:textColor="#85070707"
                android:textSize="20sp" />

        <TextView
                android:id="@+id/txtDaftar"
                android:layout_width="181dp"
                android:layout_height="17dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="117dp"
                android:layout_marginTop="111dp"
                android:layout_marginEnd="133dp"
                android:layout_marginBottom="37dp"
                android:fontFamily="@font/montserrat"
                android:text="Belum punya akun ? Daftar"
                android:textAlignment="textStart" />

        <TextView
                android:id="@+id/txtLoginAdmin"
                android:layout_width="182dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/txtDaftar"
                android:layout_alignEnd="@+id/txtDaftar"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="-27dp"
                android:layout_marginEnd="-3dp"
                android:layout_marginBottom="-1dp"
                android:fontFamily="@font/montserrat"
                android:text="Login sebagai admin"
                android:textAlignment="center" />
    </RelativeLayout>

</LinearLayout>