<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/regist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegistUserActivity">


    <TextView
            android:text="SIGN-UP"
            android:layout_width="119dp"
            android:layout_height="53dp"
            android:id="@+id/textView"
            android:textSize="30sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout" app:layout_constraintVertical_bias="0.197"/>
    <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="461dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.562" android:id="@+id/linearLayout">
        <EditText
                android:background="@drawable/edt"
                android:paddingLeft="50sp"
                android:paddingBottom="15sp"
                android:layout_width="305dp"
                android:layout_height="61dp"
                android:inputType="textPersonName"
                android:hint="Nama"
                android:ems="10"
                android:id="@+id/editNm"/>
        <EditText
                android:background="@drawable/edt_email"
                android:paddingLeft="50sp"
                android:paddingBottom="15sp"
                android:layout_marginLeft="0dp"
                android:layout_width="305dp"
                android:layout_height="61dp"
                android:inputType="textEmailAddress"
                android:hint="Email"
                android:ems="10"
                android:id="@+id/editEml"/>
        <EditText
                android:background="@drawable/edt_password"
                android:paddingLeft="50sp"
                android:paddingBottom="15sp"
                android:layout_marginLeft="0dp"
                android:layout_width="305dp"
                android:layout_height="61dp"
                android:inputType="textPassword"
                android:hint="Password"
                android:ems="10"
                android:id="@+id/editPw"/>
        <Button
                android:layout_marginLeft="0dp"
                android:layout_marginTop="50dp"
                android:paddingTop="10dp"
                android:background="@drawable/btn_rounded"
                android:paddingBottom="10dp"
                android:text="Buat Akun"
                android:layout_width="244dp"
                android:layout_height="38dp" android:id="@+id/sign_up"/>
        <TextView
                android:text="Punya Akun ? "
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/txtAkun" android:textSize="18sp"
                android:textAlignment="center" android:layout_marginTop="16dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>