<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" android:background="@drawable/user"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
            android:layout_width="303dp"
            android:layout_height="wrap_content" app:srcCompat="@drawable/welcome_page" android:id="@+id/imageView"
            android:layout_alignParentBottom="true" android:layout_marginBottom="372dp"
            android:layout_alignParentEnd="true" android:layout_marginEnd="54dp" android:layout_alignParentStart="true"
